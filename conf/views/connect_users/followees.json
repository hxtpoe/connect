{
    "name": "followees",
    "views": {
        "all": {
            "map": "function(doc, meta) { if(doc.t === 'followee') { emit(doc.followerId + '_' + doc.timestamp + '_' + doc.followeeId, doc.followeeId)} }"
        },
        "allV2": {
            "map": "function(doc, meta) { if(doc.t === 'followee') { emit(doc.followerId, doc.followeeId)} }"
        },
        "count": {
            "map": "function(doc, meta) { if(doc.t === 'followee') { emit(doc.followerId)} }",
            "reduce": "_count"
        }
    }
}