# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path

GET            /api-docs                       controllers.ApiHelpController.getResources
GET            /api-docs/posts                 controllers.ApiHelpController.getResource(path = "/posts")

OPTIONS        /*all                           controllers.Cors.preflight(all: String)

POST           /auth/facebook                  controllers.Authentication.facebook

GET            /assets/*file                   controllers.Assets.at(path="/public/", file)

GET            /api/post/:postId               controllers.PostController.find(postId: String)

GET            /api/post/user/:username        controllers.PostController.findByUsername(username: String)

POST           /api/post                       controllers.PostController.create
#DELETE         /api/post/:postId        controllers.Post.delete(postId: Long)
#PUT            /api/post/:postId        controllers.Post.update(postId: Long)
